{% extends 'base.html.twig' %}

{% block title %}Liste des formateurs {% endblock %}

{% block body %}
    <div class="titleBlock">
        <h1>Liste des formateurs</h1>
    </div>
    <table class="uk-table uk-table-striped">
        <thead>
            <tr>
                <th> Formateur</th>
                <th> Email </th>
            </tr>
        </thead>
        <tbody>
            {% for formateur in formateurs %}
                <tr>
                    <td>{{ formateur.nom ~' '~ formateur.prenom}} </td>
                    <td> {{ formateur.email }} </td>
                    <td><a class="uk-button uk-button-primary" href="{{ path('formateur_edit', {'id':formateur.id}) }}">Editer</a></td>
                    <td><a class="uk-button uk-button-primary" href="{{ path('formateur_delete', {'id':formateur.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
                  <span><a class="addButton"href="{{ path('formateur_add')}}"><i class="fas fa-plus"></i>Ajouter un formateur</i></a></span>
{% endblock %}