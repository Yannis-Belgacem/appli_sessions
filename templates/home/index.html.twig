{% extends 'base.html.twig' %}

{% block title %} Bienvenue {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user.username is defined and app.user.username %}
        <h1 id="bienvenue"> Bienvenue, {{ app.user.prenom }} {{ app.user.nom }} !</h1>
    {% else %}
    <h1 id="bienvenue">Bienvenue, connectez-vous pour acc√©der au site : <a href="{{ path('app_login')}}"><i class="fas fa-user-plus" id="homeUserIcon"></i></a></h1>
    
    {% endif %}

</div>
<div id="homePageImage">
    <img src="./img/chantier.png" alt="icone de pelleteuse">
</div>
{% endblock %}
